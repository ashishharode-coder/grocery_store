<main>
  <div class="container-fluid">
    <h2 class="mt-30 page-title">Shops</h2>
    <ol class="breadcrumb mb-30">
      <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
      <li class="breadcrumb-item"><a href="shops.html">Shops</a></li>
      <li class="breadcrumb-item active"><%= params[:action] %> Shop</li>
    </ol>
    <%= form_for @shop, url: vs_path do |f|  %>
      <div class="row">
        <div class="col-lg-12">
          <div class="add-new-shop">
            <div class="card card-static-2 mb-30">
              <div class="row no-gutters">
                <div class="col-lg-12 col-md-12">
                  <div class="card-title-2">
                    <h4>Add New Shop</h4>
                  </div>
                  <div class="card-body-table">
                    <div class="add-shop-content pd-20">
                      <div class="form-group">
                        <label class="form-label">Name*</label>
                        <%= f.text_field :name, class:"form-control", placeholder: "Shop Name", required: true %>
                      </div>
                      <div class="form-group">
                        <label class="form-label">Phone Number*</label>
                        <%= f.number_field :phone_number, class:"form-control", placeholder: "Phone Number", required: true %>
                      </div>
                      <div class="form-group">
                        <label class="form-label">Opening Time*</label>
                        <%= f.time_field :opening_time, class:"form-control", required: true %>
                      </div>
                      <div class="form-group">
                        <label class="form-label">Closing Time*</label>
                        <%= f.time_field :closing_time, class:"form-control", required: true %>
                      </div>
                      <div class="form-group">
                        <label class="form-label">Address*</label>
                        <%= f.text_area :address, class:"text-control", required: true %>
                      </div>
                      <div class="form-group">
                        <label class="form-label">Area*</label>
                        <%= f.text_field :area, class:"form-control", required: true, placeholder: "Area" %>
                      </div>
                      <div class="form-group">
                        <label class="form-label">City*</label>
                        <%= f.text_field :city, class:"form-control", required: true, placeholder: "City" %>
                      </div>
                      <div class="form-group">
                        <label class="form-label">Pin Code*</label>
                        <%= f.number_field :pin_code, class:"form-control", required: true, placeholder: "Pin Code" %>
                      </div>
                      <div class="form-group">
                        <label class="form-label">State*</label>
                        <%= f.text_field :state, class:"form-control", required: true, placeholder: "State" %>
                      </div>
                      
                      <div class="form-group">
                        <label class="form-label">Description*</label>
                        <div class="card card-editor">
                          <div class="content-editor">
                            <%= f.text_area :description, class:"text-control", required: true, placeholder: "Enter Description" %>
                          </div>
                        </div>
                      </div>
                      <div class="form-group">
                        <label class="form-label">Shop Image*</label>
                        <div class="input-group">
                          <div class="custom-file">
                            <%= f.file_field :image, class: "custom-file-input"  %>
                            <label class="custom-file-label" for="inputGroupFile04">Choose Image</label>
                          </div>
                        </div>
                        <div class="add-cate-img-1">
                          <img src="images/shop.svg" alt="">
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div>
          <%= f.submit "submit", class:"save-btn hover-btn" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</main>